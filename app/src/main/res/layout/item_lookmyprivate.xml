<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:md="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/lock_bg_white"
        android:gravity="center_vertical" >

        <!-- md:rippleColor="@color/lock_bg_blue" -->

        <ImageView
            android:id="@+id/lookmyprivate_headerimage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/app_name"
            android:padding="16dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lookmyprivate_headerimage" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lookmyprivate_detailstring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/md_black_0"
                    android:textSize="16sp"
                    tools:text="fadf" />

                <TextView
                    android:id="@+id/lookmyprivate_datestring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/md_black_2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    tools:text="fadf" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/md_black_3" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
