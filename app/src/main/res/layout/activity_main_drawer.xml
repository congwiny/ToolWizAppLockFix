<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:md="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@color/lock_bg_blue" >

        <ImageView
                android:id="@+id/drawer_logo"
                android:onClick="onClickEvent"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/slide_logo"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_lock_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/md_white_0"
            android:textSize="16sp"
            tools:text="已启用应用锁" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/lock_bg_white"
        android:orientation="vertical"
        android:paddingTop="8dp" >

        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/slide_check_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/lock_bg_white"
            android:gravity="center_vertical"
            android:onClick="onClickEvent"
            android:paddingLeft="16dp"
            md:rippleColor="@color/ripple_water"
            md:rippleSpeed="70" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/slide_version"
                android:drawablePadding="36dp"
                android:gravity="center_vertical"
                android:text="@string/pwdsetting_aboutour_version_title"
                android:textColor="@color/md_black_1"
                android:textSize="16sp" />

            <TextView
                    android:id="@+id/txt_drawer_version_num"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="当前版本1.5"
                    android:textColor="@color/md_black_2"
                    android:textSize="14sp" />

            <!-- android:drawablePadding="20dp" -->
        </com.gc.materialdesign.views.LayoutRipple>

        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/slide_share"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/lock_bg_white"
            android:gravity="center_vertical"
            android:onClick="onClickEvent"
            android:paddingLeft="16dp"
            md:rippleColor="@color/ripple_water"
            md:rippleSpeed="70" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/slide_share"
                android:drawablePadding="36dp"
                android:gravity="center_vertical"
                android:text="@string/pwdsetting_share_title"
                android:textColor="@color/md_black_1"
                android:textSize="16sp" />
        </com.gc.materialdesign.views.LayoutRipple>

        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/slide_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/lock_bg_white"
            android:gravity="center_vertical"
            android:onClick="onClickEvent"
            android:paddingLeft="16dp"
            md:rippleColor="@color/ripple_water"
            md:rippleSpeed="70" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/slide_feedback"
                android:drawablePadding="36dp"
                android:gravity="center_vertical"
                android:text="@string/pwdsetting_aboutour_feedback_title"
                android:textColor="@color/md_black_1"
                android:textSize="16sp" />

            <TextView
                    android:id="@+id/txt_drawer_info_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="收到1条回复"
                    android:textColor="@color/md_black_2"
                    android:textSize="14sp" />

        </com.gc.materialdesign.views.LayoutRipple>

        <com.gc.materialdesign.views.LayoutRipple
            android:id="@+id/slide_app"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/lock_bg_white"
            android:gravity="center_vertical"
            android:onClick="onClickEvent"
            android:paddingLeft="16dp"
            md:rippleColor="@color/ripple_water"
            md:rippleSpeed="70" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/slide_app"
                android:drawablePadding="36dp"
                android:gravity="center_vertical"
                android:text="@string/pwdsetting_aboutour_apps_title"
                android:textColor="@color/md_black_1"
                android:textSize="16sp" />
        </com.gc.materialdesign.views.LayoutRipple>
    </LinearLayout>

</LinearLayout>
