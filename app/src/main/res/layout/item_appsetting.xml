<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/classGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/classPartNameLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#a7d7f2" >

            <TextView
                android:id="@+id/class_part_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                
                android:text="" >
            </TextView>

            <TextView
                android:id="@+id/class_part_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                
                android:padding="8dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#5479b1"
                android:textSize="17sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/classleftlinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/appsetting_detailtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                
                android:text="@string/setting_default"
                android:textColor="@color/text_color_white"
                android:textSize="17sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/appsetting_detaildescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                
                android:text="@string/setting_default"
                android:textColor="#F0F0F0"
                android:textSize="12sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appsetting_rightlinearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical" >

            <com.cleanwiz.applock.ui.widget.SwitchButton
                android:id="@+id/appsetting_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/appsetting_goanother"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/appsetting_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textColor="@color/text_color_white" />

                <ImageView
                    android:id="@+id/appsetting_tipsimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
